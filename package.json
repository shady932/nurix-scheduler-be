{
  "name": "job-queue-app",
  "version": "1.0.0",
  "description": "Job-queue + workers (Express + SQLite + pm2)",
  "main": "index.js",
  "scripts": {
    "start:api": "node index.js",
    "start:processor": "node workers/processor.js",
    "start:coordinator": "node workers/coordinator.js",
    "pm2:up": "pm2 delete api worker || true && pm2 start index.js --name api && pm2 start worker.js --name worker -i 2",
    "pm2:down": "pm2 delete api worker || true"
  },
  "dependencies": {
    "better-sqlite3": "^8.3.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT"
}
